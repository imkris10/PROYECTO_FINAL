#include<stdio.h>
#include <stdlib.h>

struct info{
char Equipo[20];
int golesFavor;
int golesContra;
int victorias;
int derrotas;
char mejorJugador[20];
}datos[1]; // Aquí iría la memoria dinámica

void recogida(struct info *datos,const int cantidad);
void muestra(struct info *datos,const int cantidad);
void ordenar(struct info *datos,const int cantidad);

int main(){

    int opcion,cantidad;
    do{
    printf ("LIGA DE FUTBOL\n");
    printf("[1] Registrar equipo\n");
    printf("[2] Mostrar equipos\n");
    printf("[3] Ordenar\n");
    printf("[4] Salir\n");
    printf("Selecciona una Opcion: ");
    scanf("%d",&opcion);
    switch(opcion){
   
    case 1:
    printf("Ingresa la cantidad de equipos: ");
    scanf("%d",&cantidad);

     recogida(datos,cantidad);
   
    break;
    case 2:
     muestra(datos,cantidad);
    break;
       
    
    case 4:
       

    default:
           printf("OPCION INCORRECTA\n");
     }
     }while(opcion!=4);
         system("PAUSE");
    return 0;
}

void recogida(struct info *datos,const int cantidad){
int i;
for(i=0;i<cantidad;i++)
{
printf("\tRegistro del equipo %d\n", i+1);
fflush(stdin);
printf(" -Introduce el nombre del equipo: ");
gets((datos+i)->Equipo);
fflush(stdin);
printf(" -Goles a favor: ");
scanf("%d", &(datos+i)->golesFavor);
fflush(stdin);
printf(" -Goles en contra: ");
scanf("%d", &(datos+i)->golesContra);
fflush(stdin);
printf(" -Introduce el nombre del mejor jugador del equipo: ");
gets((datos+i)->mejorJugador);
printf(" -Ingresa las victorias del equipo: ");
scanf("%d",&(datos+i)->victorias);
fflush(stdin);
printf(" -Ingresa las derrotas del equipo: ");
scanf("%d",&(datos+i)->derrotas);
fflush(stdin);
}
}

void muestra(struct info *datos,const int cantidad)
{
int i;
printf("\n\n");
for(i=0;i<cantidad;i++)
{
printf("\n\tMOSTRANDO EQUIPOS REGISTRADOS\n");
printf("\nEquipo %d",i+1);
printf("\n Nombre del equipo: %s",(datos+i)->Equipo);
printf("\n Victorias: %d",(datos+i)->victorias);
printf("\n Derrotas: %d",(datos+i)->derrotas);
printf("\n Mejor Jugador: %s",(datos+i)->mejorJugador);
printf("\n Goles a favor: %d",(datos+i)->golesFavor);
printf("\n Goles en contra: %d\n",(datos+i)->golesContra);
}
}
